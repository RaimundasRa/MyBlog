<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form>
  <div class="form-group">
    <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.text_field :description, placeholder: "Short description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.text_area :body, placeholder: "Your story goes here", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.number_field :user_id, id: :post_user_id, class: "form-control", value: current_user.id, type: :hidden %>

  </div>

<br>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>

</form>

<% end %>
